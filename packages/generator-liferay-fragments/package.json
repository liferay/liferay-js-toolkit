{
  "name": "generator-liferay-fragments",
  "version": "0.2.0",
  "description": "Yeoman generator for creating and maintaining Liferay Fragment projects",
  "homepage": "https://www.npmjs.com/package/generator-liferay-fragments",
  "author": {
    "name": "Pablo Molina",
    "email": "contact@pablomolina.me",
    "url": "https://pablomolina.me"
  },
  "files": [
    "generators",
    "utils"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.2",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.11.1",
    "tmp": "0.0.33",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.9.1"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "glob": "^7.1.3",
    "jszip": "^3.1.5",
    "request": "^2.88.0",
    "voca": "^1.4.0",
    "yeoman-generator": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "no-var": [
        "error"
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 80
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "precommit": "npm run test && lint-staged",
    "lint": "eslint ./generators/ ./utils/",
    "test": "jest"
  },
  "repository": "p2kmgcl/generator-liferay-fragments",
  "license": "MIT"
}
