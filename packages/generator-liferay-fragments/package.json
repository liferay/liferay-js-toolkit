{
	"name": "generator-liferay-fragments",
	"version": "1.0.0",
	"description": "Yeoman generator for creating and maintaining Liferay Fragment projects",
	"homepage": "https://www.npmjs.com/package/generator-liferay-fragments",
	"author": {
		"name": "Pablo Molina",
		"email": "pablo.molina@liferay.com"
	},
	"files": [
		"generators",
		"utils"
	],
	"main": "generators/index.js",
	"keywords": [
		"liferay",
		"yeoman-generator"
	],
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"eslint": "^5.4.0",
		"eslint-config-prettier": "^3.0.1",
		"eslint-config-xo": "^0.24.2",
		"eslint-plugin-prettier": "^2.6.0",
		"husky": "^0.14.3",
		"jest": "^23.6.0",
		"lint-staged": "^7.2.2",
		"ncp": "^2.0.0",
		"prettier": "^1.11.1",
		"tmp": "0.0.33",
		"yeoman-assert": "^3.1.0",
		"yeoman-test": "^1.9.1"
	},
	"engines": {
		"node": ">= 8.0.0",
		"npm": ">= 6.0.0"
	},
	"dependencies": {
		"chalk": "^2.4.1",
		"chokidar": "^2.0.4",
		"glob": "^7.1.3",
		"jszip": "^3.1.5",
		"request": "^2.88.0",
		"voca": "^1.4.0",
		"yeoman-generator": "^2.0.1"
	},
	"jest": {
		"testEnvironment": "node",
		"modulePathIgnorePatterns": [
			"generators/.*"
		],
		"testMatch": [
			"**/__tests__/**/*.spec.js?(x)"
		]
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		],
		"*.json": [
			"prettier --write",
			"git add"
		]
	},
	"eslintConfig": {
		"plugins": [
			"prettier"
		]
	},
	"scripts": {
		"build": "node ./utils/copy-templates && babel -D -d generators src --ignore 'src/*/templates/**/*'",
		"prepublish": "npm run build",
		"precommit": "npm run build && npm run test && lint-staged",
		"lint": "eslint ./src/ ./utils/",
		"test": "jest"
	},
	"repository": "liferay/liferay-npm-build-tools",
	"license": "MIT"
}
