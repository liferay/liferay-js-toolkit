var PATH_CONTEXT = Liferay.ThemeDisplay.getPathContext();

if (PATH_CONTEXT.indexOf("/") === 0) {
	PATH_CONTEXT = PATH_CONTEXT.substr(1);
}
if (PATH_CONTEXT !== "") {
	PATH_CONTEXT += "/";
}

function adaptStaticURL(url) {
	return PATH_CONTEXT + "o<%= project.jar.webContextPath %>/" + url;
}

module.exports = {
	adaptStaticURL
};